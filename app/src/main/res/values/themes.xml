<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.GiphyAssignment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorAccent">@color/purple_200</item>
        <item name="colorSurface">@color/gray_50</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/purple_200</item>
    </style>

    <style name="Theme.GiphyAssignment" parent="Base.Theme.GiphyAssignment" />

    <style name="Theme.GiphyAssignment.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GiphyAssignment.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
</resources>